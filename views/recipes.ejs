<%- include(__dirname + '/views/partials/header.ejs') %>

<!-- Hero -->
<div class="container my-5">
    <div class="row text-center align-self-center justify-content-center">
        <div class="col-4 col-lg-12"></div>
        <div class="col-12 col-lg-12 ">
            <h1 class="text-success">Pesquisador de Receitas</h1>
            <h3>Descubra Novos Sabores</h3>
        </div>
        <div class="col-4 col-lg-12"></div>
    </div>
</div>

<!-- Form -->
<div class="container-fluid" style="margin-bottom: 10vh;">
    <div class="row">
        <form class="form-floating " action="/recipes" method="post">
            <div class="container-fluid">
                <div class="row g-2">
                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select col-6 col-lg-1 " id="floatingSelect1" name="cuisineRes" aria-label="Floating label cuisine">
                                <option value="" selected></option>
                                <% for( i=0; i<cuisine.length;i++) { %>
                                    <option value="<%= cuisine[i] %>"><%= cuisineBR[i] %></option>
                                <% } %>
                            </select>
                        <label for="floatingSelect1">Cozinha</label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select col-6 col-lg-1" id="floatingSelect2" name="dietRes" aria-label="Floating label diet">
                                <option value="" selected></option>
                                <% for( i=0; i<diet.length;i++) { %>
                                    <option value="<%= diet[i] %>"><%= dietBR[i] %></option>
                                <% } %>
                            </select>
                        <label for="floatingSelect2">Dieta</label>
                        </div>
                    </div>

                    <div class="col-12 col-lg-4">
                        <div class="form-floating">
                            <input   type="text" class="form-control" id="floatingInputValue" placeholder="Macarrão com Queijo" name="queryRes"  aria-label="Floating label dish">
                            <label for="floatingInputValue">Digite o Prato</label>
                        </div>
                    </div> 

                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select col-6 col-lg-1" id="floatingSelect3" name="intolerancesRes" aria-label="Floating label intolerances">
                                <option value="" selected></option>
                                <% for( i=0; i<intolerances.length;i++) { %>
                                    <option value="<%= intolerances[i] %>"><%= intolerancesBR[i] %></option>
                                <% } %>
                            </select>
                        <label for="floatingSelect3">Intolerância</label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select col-6 col-lg-1" id="floatingSelect4" name="typeRes" aria-label="Floating label type">
                                <option value="" selected></option>
                                <% for( i=0; i<type.length;i++) { %>
                                    <option value="<%= type[i] %>"><%= typeBR[i] %></option>
                                <% } %>
                            </select>
                        <label for="floatingSelect4">Tipo</label>
                        </div>
                    </div>

                    <div class="col-6 col-lg-1">
                        <input class="btn btn-outline-dark border-2 text-bg-success h-100 w-100" type="submit" value="Submit">
                    </div>


                </div>
            </div>
        </form>
    </div>
</div>

<!-- cards -->


<% if (locals.ids) {%>
    
<div class="container-fluid">
    <div id="menu" style="height: 70vh; margin-bottom: 180vh;" class="row text-center justify-content-center align-self-center  ">
        <% for (var i=0; i<locals.ids.length;i++){ %>
            <div class="col-12 col-lg-4 card">
              <a href="<%= /info/ + locals.ids[i] %>" style="color: inherit; text-decoration: none;" class="">  <div class="d-flex justify-content-center">
                    <img class=" mt-3 card-img-top" style="height: 40vh; width: 50vh; border-radius: 50%; border: solid;" src="<%= locals.photos[i] %>" alt="Image of <%= locals.names[i] %>">
                </div>
                <div class="card-body"  aria-label="Card Content"></div>
                <h3 class="card-text mb-2"> <%= locals.names[i] %></h3>
                <input name="ids" value="<%= locals.ids[i]  %>locals.ids[i]" type="hidden" aria-hidden="true"></a>
            </div>
   <% } }%>
    </div>
</div>


<% if (locals.errorMsg) { %>
    <div class="text-center align-self-center" style=" margin-bottom: 35vh;">
        <h2 ><%= locals.errorMsg %></h2>
    </div>
    
<% } %>





<%- include(__dirname + '/views/partials/footer.ejs') %>